@model List<Ticket>
@{
}

<h1>Tickets</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Tickets" asp-action="Create">Nowe Zgłoszenie</a>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(a => a[0].Title)
                </th>

                <th>
                    @Html.DisplayNameFor(a => a[0].Author)
                </th>

                <th>
                    @Html.DisplayNameFor(a => a[0].CreatedAt)
                </th>

                <th>
                    @Html.DisplayNameFor(a => a[0].LastUpdatedAt)
                </th>

                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class=@(item.Title.EndsWith("a")? "text-primary":"text-secondary")>
                        @item.Title
                    </td>
                    <td>
                        @item.Author
                    </td>
                    <td>
                        @item.CreatedAt
                    </td>
                    <td>
                        @item.LastUpdatedAt
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Id>Edycja</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Id>Szczegóły</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Id>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
